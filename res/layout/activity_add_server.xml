<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/serverNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_server_name"
        android:layout_column="0"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/serverName"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:hint="@string/new_server_name"
        android:inputType="text"/>

    <TextView
        android:id="@+id/serverAdressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_server_adress"
        android:layout_column="0"
        android:layout_row="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/serverAdress"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_height="wrap_content"
        android:hint="@string/new_server_adress"
        android:layout_marginRight="5dp"
        android:inputType="textUri"/>
    
    <TextView
        android:id="@+id/serverPortText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_server_port"
        android:layout_column="0"
        android:layout_row="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/serverPort"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_height="wrap_content"
        android:hint="@string/new_server_port"
        android:layout_marginRight="5dp"
        android:inputType="number" />

</GridLayout>